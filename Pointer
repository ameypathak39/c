#include <stdio.h>

int main() {
    int num = 42;  // Declare an integer variable
    int *ptr;      // Declare a pointer to an integer

    ptr = &num;    // Assign the address of 'num' to the pointer 'ptr'

    printf("Value of num: %d\n", num);
    printf("Address of num: %p\n", &num);
    printf("Value of ptr: %p\n", ptr);  // This will print the address stored in 'ptr'
    printf("Value at the address stored in ptr: %d\n", *ptr);  // Dereference the pointer to get the value at that address

    return 0;
}
